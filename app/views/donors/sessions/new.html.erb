<div class="row">
  <div class="small-12 columns">
    <h2><%= t('oodls.devise-ui.sign_in') %></h2>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="small-12 columns">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="small-1 columns">
        <div class="field switch small">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
      <div class="small-11 columns">
        <p><%= t('oodls.devise-ui.remember_me') %></p>
      </div>
    </div>
  <% end -%>
  <div class="row">
    <div class="small-12 columns">
      <div class="actions">
        <%= f.submit t('oodls.devise-ui.sign_in'), class: "small button" %>
      </div>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="small-12 columns">
    <%= render 'donors/shared/links' %>
  </div>
</div>
